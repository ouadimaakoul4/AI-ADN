5. SIMULATION FRAMEWORK

5.1 Multi-Scale Simulation Architecture

```python
import numpy as np
from scipy.integrate import solve_ivp
from scipy.sparse import csr_matrix
import networkx as nx

class SAOSSSimulator:
    """Multi-scale simulator for SAOSS"""
    
    def __init__(self, config):
        self.config = config
        self.units = []
        self.time = 0.0
        
        # Simulation modes
        self.modes = {
            'high_fidelity': self._run_high_fidelity,
            'continuum': self._run_continuum,
            'statistical': self._run_statistical
        }
        
    def initialize_swarm(self):
        """Initialize swarm with specified configuration"""
        n_units = self.config['n_units']
        
        # Orbital parameters
        a = 6878e3  # Semi-major axis (500 km altitude)
        inc = np.radians(45)  # Inclination
        
        for i in range(n_units):
            # Distribute in orbital plane ring
            angle = 2 * np.pi * i / n_units
            radius = 500e3  # 500 km radius ring
            
            # Initial position in ECI
            x = radius * np.cos(angle)
            y = radius * np.sin(angle)
            z = 0
            
            # Initial velocity (circular orbit)
            v = np.sqrt(self.config['MU'] / a)
            vx = -v * np.sin(angle)
            vy = v * np.cos(angle)
            vz = 0
            
            # Add J2-induced precession
            vy += a * self.config['omega_earth'] * np.cos(inc)
            
            # Initial phase (random)
            phase = np.random.uniform(0, 2*np.pi)
            
            unit = {
                'id': i,
                'state': np.array([x, y, z, vx, vy, vz, phase, 0.0]),
                'mass': 13.0,
                'area': 15.0,
                'power': 4000.0,
                'neighbors': []
            }
            self.units.append(unit)
    
    def compute_forces(self, unit, neighbors):
        """Compute all forces on a unit"""
        pos = unit['state'][0:3]
        vel = unit['state'][3:6]
        
        # Gravity (two-body + J2)
        r = np.linalg.norm(pos)
        a_gravity = -self.config['MU'] * pos / r**3
        
        # J2 perturbation
        x, y, z = pos
        r2 = r**2
        z2_r2 = z**2 / r2
        factor = 1.5 * self.config['MU'] * self.config['J2'] * self.config['R_earth']**2 / r**5
        a_J2 = factor * np.array([
            x * (5*z2_r2 - 1),
            y * (5*z2_r2 - 1),
            z * (5*z2_r2 - 3)
        ])
        
        # Atmospheric drag
        if r < self.config['R_earth'] + 600e3:
            h = r - self.config['R_earth']
            rho = 1.225 * np.exp(-h / 8500)
            v_rel = vel - np.cross([0, 0, self.config['omega_earth']], pos)
            v_mag = np.linalg.norm(v_rel)
            a_drag = -0.5 * rho * 2.2 * (unit['area']/unit['mass']) * v_mag * v_rel
        else:
            a_drag = np.zeros(3)
        
        # Control forces (APF)
        F_control = np.zeros(3)
        
        # Attractive to orbital slot
        target_pos = self._compute_target_position(unit)
        F_attr = -self.config['k_attr'] * (pos - target_pos)
        
        # Velocity damping
        target_vel = self._compute_target_velocity(unit)
        F_damp = -self.config['k_damp'] * (vel - target_vel)
        
        # Repulsive from neighbors
        F_rep = np.zeros(3)
        for neighbor in neighbors:
            r_ij = pos - neighbor['state'][0:3]
            d = np.linalg.norm(r_ij)
            if d < self.config['d_safe'] and d > 0:
                force_mag = self.config['k_rep'] * (1/d - 1/self.config['d_safe']) * (1/d**2)
                F_rep += force_mag * (r_ij/d)
        
        F_control = F_attr + F_damp + F_rep
        
        # Total acceleration
        a_total = a_gravity + a_J2 + a_drag + F_control/unit['mass']
        
        return a_total, F_control
    
    def compute_phase_control(self, unit, neighbors, pilot_phase):
        """Compute phase control input"""
        phase = unit['state'][6]
        phase_dot = unit['state'][7]
        
        # Desired phase for beamforming
        target_pos = self.config['ground_target']
        unit_pos = unit['state'][0:3]
        distance = np.linalg.norm(unit_pos - target_pos)
        desired_phase = pilot_phase - (2*np.pi/0.0517) * distance
        
        # Phase error
        phase_error = phase - desired_phase
        
        # Consensus term
        consensus = 0.0
        if neighbors:
            for neighbor in neighbors:
                consensus += np.sin(phase - neighbor['state'][6])
            consensus /= len(neighbors)
        
        # Control law
        u_phase = (-self.config['k_p_phase'] * phase_error 
                   - self.config['k_d_phase'] * phase_dot
                   - self.config['k_c'] * consensus)
        
        return u_phase
    
    def _run_high_fidelity(self, dt, steps):
        """High-fidelity N-body simulation"""
        for step in range(steps):
            # Update neighbor lists
            self._update_neighbors()
            
            # Update each unit
            for i, unit in enumerate(self.units):
                neighbors = [self.units[j] for j in unit['neighbors']]
                
                # Compute forces
                acceleration, _ = self.compute_forces(unit, neighbors)
                
                # Compute phase control
                u_phase = self.compute_phase_control(unit, neighbors, 0.0)
                
                # Update state (4th order Runge-Kutta)
                k1 = self._state_derivative(unit, neighbors, 0.0)
                k2 = self._state_derivative(unit, neighbors, dt/2)
                k3 = self._state_derivative(unit, neighbors, dt/2)
                k4 = self._state_derivative(unit, neighbors, dt)
                
                derivative = (k1 + 2*k2 + 2*k3 + k4) / 6
                unit['state'] += derivative * dt
            
            self.time += dt
    
    def _state_derivative(self, unit, neighbors, pilot_phase):
        """Compute state derivative for a unit"""
        pos = unit['state'][0:3]
        vel = unit['state'][3:6]
        phase = unit['state'][6]
        phase_dot = unit['state'][7]
        
        # Compute acceleration
        acceleration, _ = self.compute_forces(unit, neighbors)
        
        # Compute phase control
        u_phase = self.compute_phase_control(unit, neighbors, pilot_phase)
        
        return np.concatenate([
            vel,
            acceleration,
            [phase_dot, u_phase]
        ])
    
    def compute_beam_pattern(self, grid_size=100):
        """Compute ground intensity pattern"""
        # Create ground grid
        x = np.linspace(-5000, 5000, grid_size)
        y = np.linspace(-5000, 5000, grid_size)
        X, Y = np.meshgrid(x, y)
        
        # Ground plane at z = 0
        Z = np.zeros_like(X)
        
        intensity = np.zeros_like(X)
        
        wavelength = 0.0517  # 5.8 GHz
        k = 2 * np.pi / wavelength
        
        for i in range(grid_size):
            for j in range(grid_size):
                target = np.array([X[i,j], Y[i,j], 0])
                
                # Sum contributions from all units
                E_total = 0 + 0j
                for unit in self.units:
                    pos = unit['state'][0:3]
                    phase = unit['state'][6]
                    
                    # Far-field approximation
                    distance = np.linalg.norm(pos - target)
                    amplitude = np.sqrt(unit['power']) / distance
                    
                    E_total += amplitude * np.exp(1j * (phase - k * distance))
                
                intensity[i,j] = np.abs(E_total)**2
        
        return X, Y, intensity
    
    def run_safety_checks(self):
        """Run all safety verification checks"""
        checks = {
            'intensity': self._check_intensity_limits(),
            'collision': self._check_collision_risk(),
            'phase_coherence': self._check_phase_coherence(),
            'power_budget': self._check_power_budget()
        }
        return checks
    
    def _check_intensity_limits(self):
        """Verify ground intensity < 250 W/m²"""
        X, Y, I = self.compute_beam_pattern()
        
        # Normalize to total power
        total_power = sum(unit['power'] for unit in self.units)
        I_normalized = I / np.max(I) * total_power
        
        I_max = np.max(I_normalized)
        
        return {
            'max_intensity': I_max,
            'safe_limit': 250.0,
            'is_safe': I_max < 250.0
        }
```

5.2 Visualization Suite

```python
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D
import plotly.graph_objects as go

class SAOSSVisualizer:
    """Interactive visualization for SAOSS simulations"""
    
    def __init__(self, simulator):
        self.sim = simulator
    
    def plot_swarm_3d(self, save_path=None):
        """3D plot of swarm positions"""
        fig = plt.figure(figsize=(15, 10))
        
        # Extract positions
        positions = np.array([unit['state'][0:3] for unit in self.sim.units])
        
        # Plot 1: 3D positions
        ax1 = fig.add_subplot(231, projection='3d')
        ax1.scatter(positions[:,0]/1e3, positions[:,1]/1e3, 
                   positions[:,2]/1e3, s=1, alpha=0.5)
        ax1.set_xlabel('X (km)')
        ax1.set_ylabel('Y (km)')
        ax1.set_zlabel('Z (km)')
        ax1.set_title('Swarm Positions')
        
        # Plot 2: Phase distribution
        ax2 = fig.add_subplot(232)
        phases = [unit['state'][6] for unit in self.sim.units]
        ax2.hist(phases, bins=50, alpha=0.7)
        ax2.set_xlabel('Phase (rad)')
        ax2.set_ylabel('Count')
        ax2.set_title('Phase Distribution')
        ax2.axvline(x=0, color='r', linestyle='--', label='Reference')
        
        # Plot 3: Velocity distribution
        ax3 = fig.add_subplot(233)
        velocities = [np.linalg.norm(unit['state'][3:6]) for unit in self.sim.units]
        ax3.hist(velocities, bins=50, alpha=0.7)
        ax3.set_xlabel('Velocity (m/s)')
        ax3.set_ylabel('Count')
        ax3.set_title('Velocity Distribution')
        ax3.axvline(x=7613, color='r', linestyle='--', label='Orbital')
        
        # Plot 4: Beam pattern
        ax4 = fig.add_subplot(234)
        X, Y, I = self.sim.compute_beam_pattern(grid_size=50)
        contour = ax4.contourf(X/1e3, Y/1e3, I, levels=20, cmap='hot')
        ax4.set_xlabel('East (km)')
        ax4.set_ylabel('North (km)')
        ax4.set_title('Ground Intensity Pattern')
        plt.colorbar(contour, ax=ax4, label='Relative Intensity')
        
        # Plot 5: Neighbor distribution
        ax5 = fig.add_subplot(235)
        neighbor_counts = [len(unit['neighbors']) for unit in self.sim.units]
        ax5.hist(neighbor_counts, bins=20, alpha=0.7)
        ax5.set_xlabel('Number of Neighbors')
        ax5.set_ylabel('Count')
        ax5.set_title('Communication Connectivity')
        
        # Plot 6: Safety metrics
        ax6 = fig.add_subplot(236)
        checks = self.sim.run_safety_checks()
        
        metrics = ['Intensity', 'Collision', 'Phase', 'Power']
        values = [
            checks['intensity']['max_intensity'],
            checks['collision']['closest_approach'],
            checks['phase_coherence']['std_dev'],
            checks['power_budget']['margin']
        ]
        limits = [250, 50, np.pi/4, 0]
        
        ax6.bar(metrics, values, alpha=0.7)
        for i, limit in enumerate(limits):
            ax6.axhline(y=limit, color='r', linestyle='--', alpha=0.5)
        
        ax6.set_ylabel('Metric Value')
        ax6.set_title('Safety Metrics')
        ax6.legend(['Limit', 'Actual'])
        
        plt.tight_layout()
        
        if save_path:
            plt.savefig(save_path, dpi=300)
        
        plt.show()
    
    def create_interactive_plot(self):
        """Create interactive Plotly visualization"""
        positions = np.array([unit['state'][0:3] for unit in self.sim.units])
        
        fig = go.Figure(data=[
            go.Scatter3d(
                x=positions[:,0]/1e3,
                y=positions[:,1]/1e3,
                z=positions[:,2]/1e3,
                mode='markers',
                marker=dict(
                    size=2,
                    color=[unit['state'][6] for unit in self.sim.units],
                    colorscale='phase',
                    showscale=True
                ),
                text=[f'Unit {i}' for i in range(len(self.sim.units))],
                hoverinfo='text'
            )
        ])
        
        fig.update_layout(
            scene=dict(
                xaxis_title='X (km)',
                yaxis_title='Y (km)',
                zaxis_title='Z (km)'
            ),
            title='SAOSS Swarm Visualization'
        )
        
        return fig
```

5.3 Performance Metrics

```python
class SAOSSMetrics:
    """Comprehensive performance metrics for SAOSS"""
    
    @staticmethod
    def compute_swarm_metrics(simulator):
        """Compute all swarm performance metrics"""
        units = simulator.units
        n_units = len(units)
        
        metrics = {}
        
        # 1. Position metrics
        positions = np.array([u['state'][0:3] for u in units])
        centroid = np.mean(positions, axis=0)
        radii = np.linalg.norm(positions - centroid, axis=1)
        
        metrics['position_std'] = np.std(radii)
        metrics['formation_error'] = np.mean(np.abs(radii - 500e3))  # Target radius
        
        # 2. Phase coherence metrics
        phases = np.array([u['state'][6] for u in units])
        phase_order = np.abs(np.sum(np.exp(1j * phases))) / n_units
        
        metrics['phase_order'] = phase_order
        metrics['phase_std'] = np.std(phases)
        metrics['phase_error'] = np.mean(np.abs(phases))  # Should be near 0
        
        # 3. Beamforming metrics
        X, Y, I = simulator.compute_beam_pattern(grid_size=100)
        total_power = sum(u['power'] for u in units)
        I_normalized = I / np.max(I) * total_power
        
        # Main lobe metrics
        peak_idx = np.unravel_index(np.argmax(I_normalized), I_normalized.shape)
        peak_intensity = I_normalized[peak_idx]
        
        # Half-power beamwidth
        half_power = peak_intensity / 2
        half_power_mask = I_normalized > half_power
        beam_area = np.sum(half_power_mask) * ((X[0,1] - X[0,0]) * (Y[1,0] - Y[0,0]))
        
        metrics['peak_intensity'] = peak_intensity
        metrics['beam_area'] = beam_area
        metrics['beam_efficiency'] = np.sum(I_normalized[half_power_mask]) / total_power
        
        # 4. Safety metrics
        checks = simulator.run_safety_checks()
        metrics.update({
            'intensity_safety': checks['intensity']['is_safe'],
            'collision_safety': checks['collision']['is_safe'],
            'phase_safety': checks['phase_coherence']['is_safe']
        })
        
        # 5. Energy metrics
        sunlight_fraction = 0.65  # At 500 km
        transmission_efficiency = 0.85 * 0.85  # Atmospheric × rectenna
        
        total_generated = sum(u['power'] for u in units) * sunlight_fraction
        total_delivered = total_generated * transmission_efficiency
        
        metrics['power_generated'] = total_generated
        metrics['power_delivered'] = total_delivered
        metrics['system_efficiency'] = total_delivered / total_generated
        
        return metrics
    
    @staticmethod
    def compute_economic_metrics(config, metrics):
        """Compute economic metrics from performance"""
        # Capital costs
        manufacturing_cost = config['n_units'] * config['cost_per_unit']
        launch_cost = config['n_launches'] * config['cost_per_launch']
        ground_cost = config['ground_station_cost']
        
        total_capex = manufacturing_cost + launch_cost + ground_cost
        
        # Annual costs
        crf = 0.1295  # 10 years, 5%
        annual_capex = total_capex * crf
        annual_opex = total_capex * 0.01  # 1% of capex
        
        # Annual energy
        hours_per_year = 8760
        capacity_factor = 0.99  # SAOSS availability
        annual_energy = metrics['power_delivered'] * hours_per_year * capacity_factor
        
        # LCOE
        lcoe = (annual_capex + annual_opex) / annual_energy
        
        economic_metrics = {
            'total_capex': total_capex,
            'annual_capex': annual_capex,
            'annual_opex': annual_opex,
            'annual_energy': annual_energy,
            'lcoe': lcoe,
            'lcoe_per_kwh': lcoe * 1000  # Convert to $/kWh
        }
        
        return economic_metrics
```

